public class DefaultFormatter implements NumberFormatter
{
        public String format (int numberInput)
        {
                String number = ""+numberInput;
                String newString = "";
                if (number == 0)
                        return ""+numberInput;
                while (numberInput > 0)
                {
                     newString += numberInput%2
                     numberInput = numberInput/2
                }
                String finalBinary = "";
                for (int i = newString.length()-1; i>= 0; i--)
                        finalBinary+=newString.charAt(i)
                return finalBinary;
        }
}
